<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:droidfu="http://github.com/droidfu/schema"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  	<com.github.droidfu.widgets.WebImageView android:id="@+id/webImage"
  		android:layout_width="50dip"
     	android:layout_height="75dip"
        droidfu:autoLoad="true"
        android:layout_alignParentLeft="true" 
  		/>
    <TextView android:id="@+id/titleText" 
    	android:layout_toRightOf="@id/webImage"
    	android:textAppearance="?android:attr/textAppearanceMedium"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"
    	android:layout_toLeftOf="@+id/audienceLabel"/>
    <TextView android:id="@+id/criticLabel"
   		android:text="Critics:"
    	android:textAppearance="?android:attr/textAppearanceSmall" 
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content" 
    	android:layout_toLeftOf="@+id/criticText"/>
    <TextView android:id="@id/criticText" 
    	android:textAppearance="?android:attr/textAppearanceSmall" 
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content" 
    	android:layout_alignParentRight="true"/>
    <TextView android:id="@id/audienceLabel"
    	android:text="Audience:"
    	android:textAppearance="?android:attr/textAppearanceSmall" 
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content" 
    	android:layout_toLeftOf="@+id/audienceText"
    	android:layout_below="@id/criticLabel" 
    	/>
    <TextView android:id="@id/audienceText" 
    	android:textAppearance="?android:attr/textAppearanceSmall"
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content" 
    	android:layout_below="@id/criticText" 
    	android:layout_alignParentRight="true" />
    	
    <TextView android:id="@+id/genreItemText"
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content" 
    	android:layout_alignParentBottom="true"
    	android:layout_toRightOf="@id/webImage"/>
    
</RelativeLayout>
