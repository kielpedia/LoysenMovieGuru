<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingLeft="75dip"
  android:paddingRight="75dip"
  android:paddingTop="150dip"
  android:paddingBottom="150dip">
  
  	<Button android:id="@+id/theatreButton" 
    	android:layout_height="wrap_content" 
    	android:text="In Theatre" 
    	android:layout_width="wrap_content" 
		android:layout_alignParentLeft="true"
    	/>
    	
    <Button android:id="@+id/openingButton" 
    	android:layout_height="wrap_content" 
    	android:text="Opening" 
    	android:layout_width="wrap_content"
    	android:layout_alignParentRight="true"
    	android:paddingBottom="20dip"
    	/>
    
    	
    <Button android:id="@+id/dvdReleaseButton" 
    	android:layout_height="wrap_content" 
    	android:text="New DVD's" 
    	android:layout_width="wrap_content" 
    	android:layout_alignParentLeft="true"
    	android:layout_alignParentBottom="true"
    	/>
    	
    <Button android:id="@+id/searchButton" 
    	android:layout_height="wrap_content" 
    	android:text="Search" 
    	android:layout_width="wrap_content" 
    	android:layout_alignParentRight="true"
    	android:layout_alignParentBottom="true"
    	/>
    
</RelativeLayout>
